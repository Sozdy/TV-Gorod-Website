/**
 * Basic typography style for copy text
 */
html, body
    color #333
    font-family: "Montserrat", sans-serif;
    font-size: 16px;
    font-style: normal;
    font-weight: normal;
    line-height: 20px;

body
    height 100%

    @media (max-width: 991.98px)
        font-size: 14px;

    @media (max-width: 767.98px)
        font-size: 14px;

    @media (max-width: 575.98px)
        font-size: 14px;

a
    color initial

    &:hover
        color initial
        text-decoration none

.h-container
    border-bottom 1px solid #dddddd
    margin-bottom 1em

H2
    font-weight: 600;
    font-size: 1.25em;
    display inline-block

    &.bb
        padding-bottom 0.4em
        border-bottom 4px solid
        margin-bottom 0

        @media $md-and-smaller
            font-size 1.375em

        @media $sm-and-smaller
            font-size 1.5em

        &.bb-blue
            border-bottom-color $blue
        &.bb-dark-blue
            border-bottom-color $dark-blue
        &.bb-yellow
            border-bottom-color $yellow
        &.bb-green
            border-bottom-color $green
        &.bb-red
            border-bottom-color $red
        &.bb-orange
            border-bottom-color $orange
        &.bb-cyan
            border-bottom-color $cyan
        &.bb-grey
            border-bottom-color $grey

.publish-date
    font-style italic
    font-weight 500
    font-size 80%

.looks-like-link
    text-decoration underline
    color #007bff

.btn-blue
    padding 6px 18px
    font-family: Montserrat;
    font-style: normal;
    font-weight: 600;
    font-size: 12px;
    line-height: 25px;
    display: flex;
    align-items: center;
    outline none
    text-align: center;
    background: #28A2D6;
    border: 0;
    color: #FFFFFF;
    box-shadow: 1px 1px 8px rgba(0, 0, 0, 0.25);
    transition background .5s

    &:hover
        background: tint(#28A2D6, 10%)
