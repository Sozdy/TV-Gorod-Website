#up-button
    display inline-block
    background url("/img/icons/up_btn.svg") center no-repeat
    background-size contain
    width 50px
    height 50px
    text-align center
    position fixed
    will-change: transform
    bottom 100px
    right 30px
    transition background-color .3s, opacity .5s, visibility .5s
    opacity 0
    visibility hidden
    cursor pointer
    z-index 1000

    &.show
        opacity 1
        visibility visible
