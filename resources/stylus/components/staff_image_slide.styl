#staff_image_slide.show
    display flex

#staff_image_slide
    background: rgba(0,0,0,.25);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: none;
    justify-content center
    align-items center
    z-index: 1001;

    .staff_photo-container
        display flex
        align-items center
        justify-content center
        width 75%
        @media $lg-and-smaller
            width 95%

        .staff_photo
            max-width 100%

    .close-btn
        position fixed
        top 30px
        right 30px
        width 20px
        cursor pointer
        transition transform 1s

        &:hover
            transform scale(1.1)

