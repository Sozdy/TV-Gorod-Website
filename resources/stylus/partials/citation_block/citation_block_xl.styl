.citation-block-xl
    width 100%
    border-radius 3px
    color white
    cursor pointer
    box-shadow: 0px 1px 5px rgba(0, 0, 0, 0.1);

    .overlay
        width 100%
        padding-top 6.56em
        padding-bottom 2.5em
        background linear-gradient(180deg, rgba(235, 166, 5, 0) 0%, rgba(235, 166, 5, 0) 50%, rgba(235, 166, 5, 0.7145) 75%, #EBA605 100%)
        border-radius 3px
        position relative

        .content
            padding-top 50%
            position relative

            H4
                font-size 0.875em
                font-weight 600
                line-height 1.375rem

                @media $md-and-smaller
                    font-size 120%

            .citation-icon
                position absolute


                &.top
                    left -1em
                    top calc(50% - 1em)
                &.bottom
                    right -1em

    .news-icons
        top 1em
        right 1em

        .btn-play
            width 35px
            height 35px
            cursor pointer

