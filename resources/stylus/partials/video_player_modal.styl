.modal
    width: 100%
    height: 100%
    padding: 0 !important
    justify-content center
    align-items center

    .modal-dialog-custom
        max-width none
        max-height none
        padding: 0!important
        margin: 0!important
        display flex !important
        justify-content center
        align-items center
        height: 100%
        width: 100%;


        .modal-content
            display flex
            flex-wrap wrap
            background-color: transparent;
            border none
            flex-direction: row
            justify-content center
            align-items center

.modal:not(.has-playlist)
    .modal-content
        width: 900px;

        @media (max-width: 935px)
            width 754px
        @media (max-width: 769px)
            width 550px
        @media (max-width: 570px)
            width 320px

        #videoPlayer
            width: 900px;
            height: 505px;
            padding 0

            @media (max-width: 935px)
                width 754px
                height: 424px
            @media (max-width: 769px)
                width 550px
                height: 309px
            @media (max-width: 570px)
                width 320px
                height: 180px

        #playlist
            display none


.modal.has-playlist
    .modal-content
        width 1174px

        @media (max-width: 935px)
            width 754px
        @media (max-width: 880px)
            width 550px
        @media (max-width: 570px)
            width 320px

        #videoPlayer
            width 754px
            height: 424px
            padding 0

            @media (max-width: 935px)
                width 754px
                height: 424px
            @media (max-width: 880px)
                width 550px
                height: 309px
            @media (max-width: 570px)
                width 320px
                height: 180px

        #playlist
            width: 420px;
            height: 424px
            padding 0
            display: flex
            overflow-Y scroll
            flex-direction column
            background: #f7f4f4
            @media (max-width: 1200px)
                width: 754px;
                height: 280px
            @media (max-width: 880px)
                width 550px
                height: 320px
            @media (max-width: 570px)
                width 320px
                height: 350px

            .playlist-item-container
                padding: 7px 0
                background: #F7F4F4;

                .playlist-item
                    cursor pointer
                    padding: 3px 3px 3px 30px
                    display: flex
                    position: relative;
                    transition background 0.3s
                    @media (max-width: 570px)
                        padding: 3px 3px 3px 15px


                    &:hover
                        background: shade(#F7F4F4, 7%);


                .preview
                    display flex
                    justify-content center
                    align-items center

                    img
                        object-fit cover
                        height: 95.5px
                        width: 171.7px
                        @media (max-width: 570px)
                            height: 56.25px
                            width: 100px

                .text
                    display: flex;
                    flex-direction: column
                    font-family: Montserrat;
                    font-style: normal;
                    line-height: 20px
                    color: #000000
                    padding: 10px

                    .title-video
                        font-weight: 600
                        overflow-wrap: anywhere;
                        font-size: 14px
                        flex 1

                    .playlist-title
                        font-weight: normal;
                        font-size: 12px;
                        overflow-wrap: anywhere;
