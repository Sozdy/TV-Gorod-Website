.polling-block
    padding 20px
    background #FFFFFF
    box-shadow 1px 1px 15px rgba(0, 0, 0, 0.1)
    border-radius 3px

    &__title
        font-family Montserrat
        font-weight 600
        font-size 14px
        line-height 20px
        padding-bottom 15px
        border-bottom 0.5px solid rgba(0, 0, 0, 0.1)

    form, .poll-results
        margin-top: 15px
        .form-check
            font-family Lora
            font-size 12px
            line-height 18px
            color #333333
            margin-bottom 15px

            input[type=radio]
                background-color #E5E5E5
                border 0.5px solid rgba(51, 51, 51, 0.3)
                margin-top 0.1rem


    .poll-results
        .count
            display: inline-block;
            width: 2.6em;
            color: #2fa0c5;
            font-size: 1.3em;
            font-weight: 600;
            text-align: right;
            padding-right: 0.4em;

            &.gray
                color dimgrey
            &.green
                color #50c52f
