.news-partial
    position relative
    background #FFFFFF
    box-shadow 1px 1px 15px rgba(0, 0, 0, 0.1)

    .social-icons-container
        position: absolute;
        top: 30px
        left: -45px
        height 165px
        width 35px
        flex-direction column
        justify-content space-between
        z-index 5
        display none
        opacity 0.05

        @media (max-width 1250px) && (min-width 576px)
            display none

        @media (min-width 1250px)
            display flex

        .social-icon-item
            width: 35px
            height: 35px
            border-radius: 50%
            transition transform 0.3s

            &:hover
                transform scale(1.06)

            img
                padding: 8px;
                width: 35px
                height: 35px
                object-fit contain

            &.youtube
                background: linear-gradient(0deg, #B71616, #B71616);

            &.telegram
                background: linear-gradient(0deg, #4C88E2, #4C88E2);
            &.instagram
                background: linear-gradient(94.45deg, #F12EA3 3.61%, #B51374 98.01%);
            &.ok
                background: linear-gradient(0deg, #F9955D, #F9955D);

    .authors-block-xs-and-xl
        border-radius 3px
        display flex
        flex-direction column
        justify-content space-between
        background: #EFF3FA;
        padding: 16px
        font-family: Montserrat;
        font-size: 14px;

        @media $xs-and-smaller
            margin 8px 15px 0

        .authors
            display: flex;
            justify-content space-between
            flex-direction column
            flex 1

            .category
                font-size: 14px;

            .article-author
                font-size: 14px;

            .photo-author
                font-size: 14px;

            .publish-date
                font-size: 12px;
                margin: 0


        .video-button
            border-radius 0 0 3px 3px
            display: flex;
            margin: 0 -16px -16px;
            justify-content: space-between;
            align-items: center;
            cursor pointer
            bottom 0
            padding: 8px 16px
            right 0
            background #CD1010
            color white
            font-family: Montserrat;
            font-style: normal;
            font-weight: 600;
            font-size: 14px;
            line-height: 26px;

    .authors-block-sm-and-lg
        border-radius 3px
        display flex
        flex-direction column
        justify-content space-between

        font-family: Montserrat;
        font-size: 14px;

        .authors
            background: #EFF3FA;
            padding: 16px
            display: flex;
            position: relative;
            flex-direction column
            flex 1

            .category
                font-size: 14px;

            .article-author
                font-size: 14px;

            .photo-author
                font-size: 14px;

            .publish-date
                font-size: 14px;
                margin: 0

            .video-button
                position: absolute;
                border-radius 0 3px 3px 0
                display: flex;
                justify-content: center;
                align-items: center;
                cursor pointer
                bottom 0
                top: 0
                padding: 8px 16px
                right 0
                background #CD1010
                color white
                font-family: Montserrat;
                font-style: normal;
                font-weight: 600;
                font-size: 14px;
                line-height: 26px;

    H1
        font-size 1.125em !important
        font-weight 600

    .description
        font-family: Lora;
        font-style: normal;
        font-weight: normal;
        font-size: 16px;
        line-height: 26px;

        a
            color #007bff
            text-decoration underline

    .quote
        position: relative;
        background #EFF3FA
        font-family Lora
        font-style italic
        padding 10px 20px 10px 44px

        img
            position: absolute;
            left: 20px;
            top: 7px;

    .date-and-reactions-container
        display flex
        justify-content space-between
        flex-wrap wrap-reverse
        margin-top 2em

        .reactions
            display flex
            margin-left: auto;

            img
                cursor pointer
                transition filter 0.2s

                &:hover
                    filter brightness(0.9)

            img.disabled
                filter grayscale(1)

                &:hover
                    filter none

            .clicks-number
                text-align center
                margin: 5px 0

        .publish-date
            align-items: flex-end;
            display: flex;

blockquote
    position: relative;
    background #EFF3FA
    font-family Lora
    font-style italic
    padding 10px 20px 10px 44px
