.agency-partners-block
    background #FFFFFF
    box-shadow 1px 1px 15px rgba(0, 0, 0, 0.1)
    padding 5px 20px

    .partner
        display flex
        justify-content space-between
        padding: 15px 0


        &__name
            font-family Montserrat
            font-size 14px
            line-height 18px

        .arrow-right
            align-self center
            margin-right: 4px
            min-width 15px
            height 9px
            background: no-repeat center url("/img/arrow_right.svg")

    .partner-border
        border-top 1px solid rgba(0, 0, 0, 0.1)

    .partner-border-sm
        @media (max-width: 575.9px)
            border-top 1px solid rgba(0, 0, 0, 0.1)
